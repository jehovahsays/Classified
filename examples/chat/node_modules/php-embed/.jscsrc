{
  "preset": "node-style-guide",
  // allow some slop to account for legacy code
  "validateQuoteMarks": { "mark": "'", "escape": true },
  "requireCapitalizedComments": { "allExcept": ["jshint","globals"] },
  "disallowTabs": true,

  "excludeFiles": [
    "test.js",
    "scripts/publish.js",
    "build/**",
    "clean/**",
    "deps/**",
    "node_modules/**",
    "*-x86/**",
    "*-ia32/**"
  ]
}
